<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <section>
        <% products.forEach(product=> { %>
            <article>
                <h1>
                    <%= product.tittle %>
                </h1>
                <h3>
                    <%= product.price %>
                </h3>
                <a href="/products/<%= product.id %>/detail">
                    <button>Ver detalle</button>
                </a>
            </article>
            <% }) %>
    </section>

</body>

</html>