    <title>BLAMSH</title>
</head>

<body>
    <header>
        <%-include ('./partials/navbar')%>
    </header>
    <main>

        <h1>Listado de Usuarios</h1>

        <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td class="mayus"><%= user.firstName %></td>
                    <td class="mayus"><%= user.lastName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.rol_id %></td>
                        <td>
                            <form id="delete-user" action="/users/<%= user.id %>/delete?_method=DELETE" method="post">
                                <input type="submit" value="Eliminar usuario">
                            </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table><br>

</main>
    <footer class="footer-layout">
        <%-include ('./partials/footer')%>
    </footer>
    <script src="/js/confirmDeleteUser.js"></script>
    <script src="/js/catalog.js"></script>
    <script src="/js/menu.js"></script>
</body>


</html>